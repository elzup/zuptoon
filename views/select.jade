extends layout

block content
  #wrapper
    h1 コントローラ, チーム選択

    each team, it in ['赤', '黄', '青', '緑']
      div(class='team team' + it)
        p= team + 'チーム'
        ul
          each wepon, iw in ['ウォーター', 'ライフル', 'ローラー']
            li
              a(href='?type=' + iw + '&team=' + it)=wepon
