extends layout

block content
  #wrapper
    h1 コントローラ, チーム選択

    .team-select
      each team, it in ['赤', '黄']
        div(class='team team' + it)
          p
            a(href='?team=' + it)=team + 'チーム'
    .team-select
      each team, it in ['青', '緑']
        div(class='team team' + (it + 2))
          p
            a(href='?team=' + it)=team + 'チーム'
  h2 操作方法
  img#help(src="/images/help.png")
