#!/usr/bin/env node
require('coffee-script/register')

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('pyonpyon:server');
var http = require('http');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '8080');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);
var io = require('socket.io')(server);
io.on('connection', function(socket) {
    var person_count = socket.client.conn.server.clientsCount;

    io.emit('count', { count: person_count });

    socket.on('shake', function(data) {
        console.log('shake!' + socket.id);
        data.id = socket.id;
        io.emit('shake', data);
    });

    socket.on('move', function(data) {
        console.log('move!' + data);
        console.log('shake!');
        data.id = socket.id;
        io.emit('move', data);
    });

    socket.on('new', function(data) {
        console.log('new : ' + socket.id);
        data.id = socket.id;
        io.emit('createuser', data);
    });

    socket.on('leave', function(data) {
        console.log('leave : ' + socket.id);
        data.id = socket.id;
        io.emit('leave', data);
    });

    socket.on('disconnect', function() {
        // var person_count = socket.client.conn.server.clientsCount;
        console.log('exit : ' + socket.id);
        data = {
            id: socket.id
        };
        io.emit('removeuser', data);
    });
});

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
